    <header class="header" role="banner">
        <div class="header--wrap">
            <a class="header--logo">
                <div class="lockup">
                    <img alt="Gdev apps" class="lockup--logo" src="https://www.dropbox.com/s/s8do90nf2uv4ey2/image1.png?raw=1">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <span class="gb_9a pull-right">
                            <img src='@UserManager.GetUserAsync(User).Result.Avatar'>
                        </span> 
                        <!-- <span class="pull-right">Hello @UserManager.GetUserName(User)!</span> -->
                    }
                    
                </div>
            </a>
