@using Microsoft.AspNetCore.Identity
@using GdevApps.Portal.Models

@inject SignInManager<GdevApps.Portal.Data.ApplicationUser> SignInManager
@inject UserManager<GdevApps.Portal.Data.ApplicationUser> UserManager

<div class="js-navigation-scrollable">
@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="support--navigation">
            <li class="navigation--tier-one">
                <button type="submit" class="btn btn-default">LOG OUT</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="support--navigation">
        <li class="navigation--tier-one">
            <a class="navigation--item"  asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="navigation--tier-one">
            <a class="navigation--item js-sign-in-toggle" asp-area="" asp-controller="Account" asp-action="Login">Sign in</a>
        </li>
    </ul>
}
</div>
