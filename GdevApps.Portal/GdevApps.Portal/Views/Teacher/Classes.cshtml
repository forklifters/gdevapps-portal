<script src="~/js/Teacher/classes.js" asp-append-version="true"></script>
<link rel="stylesheet" href="~/css/Teacher/classes.css" />
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<script type="text/javascript">
    $(function() {
        Classes.init();
    });
</script>
@model List<GdevApps.Portal.Models.TeacherViewModels.ClassesViewModel>
@using Newtonsoft.Json;
<h2>Google Classroom Classes</h2>
@Html.AntiForgeryToken()
<div class="row">
    <div class="form-group">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"></h3>
                    </div>
                    <div class="panel-body">
                        <table id="classes" class="table table-striped table-bordered table-hover responsive" width="100%">
                            <thead class="thin-border-bottom">
                                <tr>
                                    <th> </th>
                                    <th>Name</th>
                                    <th>Id</th>
                                    <th class="hidden"></th>
                                    <th class="hidden"></th>
                                    <th class="hidden"></th>
                                    <th class="hidden"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var gbClass in Model){
                                    <tr>
                                        <td class="details-control">
                                            <span class="glyphicon glyphicon-th-list"></span>
                                        </td>
                                        <td>@gbClass.Name</td>
                                        <td>@gbClass.Id</td>
                                        <td class="hidden">@gbClass.Description</td>
                                        <td class="hidden">@gbClass.StudentsCount</td>
                                        <td class="hidden">@gbClass.CourseWorksCount</td>
                                        <td class="hidden">@JsonConvert.SerializeObject(gbClass.ClassroomSheets)</td>
                                    </tr>
                                    
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="modal-placeholder"></div>